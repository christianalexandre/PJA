<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">50dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="endIconMode">clear_text</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="cursorColor">@color/gray</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="errorTextColor">@color/error_red</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
        <item name="errorIconTint">@color/error_red</item>
    </style>

    <style name="AvailableCurrenciesDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/gray</item>
        <item name="thumbColor">@color/gray</item>
    </style>
</resources>